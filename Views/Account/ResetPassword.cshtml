@model ResetPasswordViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Reset Password</h1>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <input type="hidden" asp-for="@Model.Email" />
            <input type="hidden" asp-for="@Model.Token" />
            
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control"/>
            </div>

            <button type="submit" class="btn btn-primary" style="width:auto">Reset Password</button>
        </form>
    </div>
</div>