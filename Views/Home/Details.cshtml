@model HomeDetailsViewModel
@{
    ViewBag.Title = "Details of Employee";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>

            <div class="card-body text-center">
                @if (Model.employee.PhotoPath != null)
                {
                    <img class="card-img-top" src="~/images/@Model.employee.PhotoPath"/>
                }
                else
                {
                    <img class="card-img-top" src="~/images/noimage.jpg" />
                }
                
                <h4>Employee ID : @Model.employee.Id</h4>
                <h4>Email : @Model.employee.Email</h4>
                <h4>Department : @Model.employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-action="index" class="btn btn-primary">Back</a>
                <a asp-action="Edit" asp-route-id="@Model.employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>